#!/bin/bash

#
# use this script to build the R binaries on a heroku instance
#

shopt -s extglob

# fail fast
set -e

# debug
# set -x

if [[ ! -f .env ]]; then
  cp .env.example .env
  echo "Please edit the .env file and supply your AWS credentials before continuing."
  exit 1
fi

R_VERSION="${1:-3.3.1}"
BUILD_NO="${2:-`date +%Y%m%d-%H%M`}"
STACK="${3:-cedar-14}"

# TODO
